<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IxiHome.Pages.AboutPage"
             Title="About">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <Image Source="ixihome_logo.png" 
                   HeightRequest="120" 
                   WidthRequest="120"
                   HorizontalOptions="Center"/>
            
            <Label Text="IxiHome" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"/>
            
            <Label x:Name="VersionLabel"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"/>
            
            <Label Text="Smart Home Controller on the Ixian Platform" 
                   FontSize="14"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20"/>
            
            <Frame Padding="20" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="15">
                    <Label Text="About IxiHome" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="IxiHome is a decentralized smart home controller that connects to Home Assistant via QuIXI bridge, providing secure and private control of your smart home devices through the Ixian Platform."
                           TextColor="Gray"
                           FontSize="14"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame Padding="20" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Features" FontSize="18" FontAttributes="Bold"/>
                    <Label Text="• Post-quantum secure communication" FontSize="14" TextColor="Gray"/>
                    <Label Text="• Customizable entity widgets" FontSize="14" TextColor="Gray"/>
                    <Label Text="• Real-time state updates" FontSize="14" TextColor="Gray"/>
                    <Label Text="• Multi-platform support" FontSize="14" TextColor="Gray"/>
                    <Label Text="• Decentralized architecture" FontSize="14" TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>
            
            <Button Text="Visit Ixian.io" 
                    Clicked="OnVisitWebsiteClicked"
                    Margin="0,20,0,0"/>
            
            <Label Text="© 2025 Ixian Platform" 
                   FontSize="12"
                   TextColor="Gray"
                   HorizontalTextAlignment="Center"
                   Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
