<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:IxiHome.Controls"
             xmlns:utils="clr-namespace:IxiHome.Utils"
             xmlns:data="clr-namespace:IxiHome.Data"
             x:Class="IxiHome.Pages.HomePage"
             Title="Home">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Entity Templates -->
            <DataTemplate x:Key="ToggleTemplate">
                <controls:ToggleEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="SensorTemplate">
                <controls:SensorEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="GaugeTemplate">
                <controls:GaugeEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="GraphTemplate">
                <controls:GraphEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <!-- Template Selector -->
            <utils:EntityTemplateSelector x:Key="EntitySelector"
                                          ToggleTemplate="{StaticResource ToggleTemplate}"
                                          SensorTemplate="{StaticResource SensorTemplate}"
                                          GaugeTemplate="{StaticResource GaugeTemplate}"
                                          GraphTemplate="{StaticResource GraphTemplate}"
                                          DefaultTemplate="{StaticResource SensorTemplate}"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="*,Auto" Padding="10">
        <!-- Entities List -->
        <CollectionView x:Name="EntitiesCollection"
                        SelectionMode="None"
                        ItemTemplate="{StaticResource EntitySelector}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                    <Label Text="ðŸ " FontSize="64" HorizontalTextAlignment="Center"/>
                    <Label Text="No Entities Yet" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,5"/>
                    <Label Text="Tap the + button below to add your first entity" 
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Add Entity Button -->
        <Button Text="+ Add Entity" 
                Grid.Row="1"
                Clicked="OnAddEntityClicked"
                HeightRequest="50"
                CornerRadius="25"
                Margin="20,10,20,10"
                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                TextColor="White"/>
    </Grid>
</ContentPage>
