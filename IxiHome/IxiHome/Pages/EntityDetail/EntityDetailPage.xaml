<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IxiHome.Pages.EntityDetail.EntityDetailPage"
             Title="Entity Details">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Entity Info -->
            <Frame Padding="20" HasShadow="True" CornerRadius="15">
                <VerticalStackLayout Spacing="15">
                    <Label x:Name="EntityIconLabel" 
                           Text="ðŸ " 
                           FontSize="64"
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="EntityNameLabel" 
                           FontSize="24" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="EntityStateLabel" 
                           FontSize="18"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"/>
                    <Label x:Name="EntityIdLabel" 
                           FontSize="12"
                           TextColor="LightGray"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Control Section -->
            <Frame x:Name="ControlFrame" 
                   Padding="20" 
                   HasShadow="True" 
                   CornerRadius="15"
                   IsVisible="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Controls" FontSize="18" FontAttributes="Bold"/>
                    <Button x:Name="ToggleButton" 
                            Text="Toggle" 
                            Clicked="OnToggleClicked"
                            IsVisible="False"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Edit Section -->
            <Frame Padding="20" HasShadow="True" CornerRadius="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Edit Entity" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="EntityNameEntry" Placeholder="Name"/>
                    <Entry x:Name="EntityIconEntry" Placeholder="Icon (emoji)"/>
                    <Button Text="Save Changes" Clicked="OnSaveClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Delete Button -->
            <Button Text="Delete Entity" 
                    Clicked="OnDeleteClicked"
                    BackgroundColor="Red"
                    TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
