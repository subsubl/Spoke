<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IxiHome.Widgets.SensorWidgetView"
             Title="Sensor Widget">

    <ContentPage.Resources>
        <Style x:Key="WidgetFrameStyle" TargetType="Frame">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F8F9FA, Dark=#2D2D30}"/>
            <Setter Property="BorderColor" Value="{AppThemeBinding Light=#DEE2E6, Dark=#3E3E42}"/>
            <Setter Property="HasShadow" Value="True"/>
        </Style>
    </ContentPage.Resources>

    <Frame Style="{StaticResource WidgetFrameStyle}">
        <VerticalStackLayout Spacing="8">
            <!-- Header -->
            <HorizontalStackLayout Spacing="8">
                <Label Text="Sensors"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalOptions="StartAndExpand"
                       VerticalOptions="Center"/>

                <Button Text="Ã—"
                        FontSize="16"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#6C757D, Dark=#ADB5BD}"
                        HorizontalOptions="End"
                        Clicked="OnCloseClicked"/>
            </HorizontalStackLayout>

            <!-- Sensor List -->
            <CollectionView ItemsSource="{Binding SensorData}"
                           SelectionMode="None"
                           HeightRequest="120">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout Spacing="8" Padding="4">
                            <Label Text="{Binding Name}"
                                   FontSize="12"
                                   HorizontalOptions="StartAndExpand"
                                   VerticalOptions="Center"/>

                            <Label Text="{Binding Value}"
                                   FontSize="12"
                                   FontAttributes="Bold"
                                   HorizontalOptions="End"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <Label Text="No sensor data"
                           FontSize="12"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"/>
                </CollectionView.EmptyView>
            </CollectionView>
        </VerticalStackLayout>
    </Frame>
</ContentPage>