<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spoke.Widgets.EntityWidgetView"
             Title="Entity Widget">

    <ContentPage.Resources>
        <Style x:Key="WidgetFrameStyle" TargetType="Frame">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light=#F8F9FA, Dark=#2D2D30}"/>
            <Setter Property="BorderColor" Value="{AppThemeBinding Light=#DEE2E6, Dark=#3E3E42}"/>
            <Setter Property="HasShadow" Value="True"/>
        </Style>

        <Style x:Key="WidgetButtonStyle" TargetType="Button">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="HeightRequest" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </ContentPage.Resources>

    <Frame Style="{StaticResource WidgetFrameStyle}">
        <VerticalStackLayout Spacing="8">
            <!-- Header -->
            <HorizontalStackLayout Spacing="8">
                <Label Text="{Binding Entity.Name}"
                       FontSize="14"
                       FontAttributes="Bold"
                       HorizontalOptions="StartAndExpand"
                       VerticalOptions="Center"/>

                <Button Text="Ã—"
                        FontSize="16"
                        BackgroundColor="Transparent"
                        TextColor="{AppThemeBinding Light=#6C757D, Dark=#ADB5BD}"
                        HorizontalOptions="End"
                        Clicked="OnCloseClicked"/>
            </HorizontalStackLayout>

            <!-- Entity Control -->
            <ContentView x:Name="EntityControlContainer"
                        VerticalOptions="FillAndExpand"/>

            <!-- Status -->
            <Label Text="{Binding Entity.State, StringFormat='Status: {0}'}"
                   FontSize="10"
                   TextColor="{AppThemeBinding Light=#6C757D, Dark=#ADB5BD}"
                   HorizontalTextAlignment="Center"/>
        </VerticalStackLayout>
    </Frame>
</ContentPage>