<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Spoke.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Spoke"
    xmlns:pages="clr-namespace:Spoke.Pages"
    Shell.FlyoutBehavior="Flyout">

    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}" 
              HeightRequest="200" 
              Padding="20">
            <VerticalStackLayout VerticalOptions="Center">
                <Image Source="Spoke_logo.png" 
                       HeightRequest="80" 
                       WidthRequest="80"
                       HorizontalOptions="Center"/>
                <Label Text="Spoke" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       TextColor="White"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0"/>
                <Label Text="Smart Home Controller" 
                       FontSize="14" 
                       TextColor="White"
                       Opacity="0.8"
                       HorizontalTextAlignment="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Home" Icon="home_icon.png">
        <ShellContent Route="home" ContentTemplate="{DataTemplate pages:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Scenes" Icon="scenes_icon.png">
        <ShellContent Route="scenes" ContentTemplate="{DataTemplate pages:ScenesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Automations" Icon="automations_icon.png">
        <ShellContent Route="automations" ContentTemplate="{DataTemplate pages:AutomationsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Widgets" Icon="widgets_icon.png">
        <ShellContent Route="widgets" ContentTemplate="{DataTemplate pages:WidgetsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Settings" Icon="settings_icon.png">
        <ShellContent Route="settings" ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="About" Icon="about_icon.png">
        <ShellContent Route="about" ContentTemplate="{DataTemplate pages:AboutPage}" />
    </FlyoutItem>

</Shell>
