<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:data="clr-namespace:Spoke.Data"
             x:Class="Spoke.Controls.ClimateEntityControl"
             x:Name="ClimateControl">
    <ContentView.Content>
        <Border StrokeShape="RoundRectangle 8" StrokeThickness="1" Padding="12" BackgroundColor="{AppThemeBinding Light=White, Dark=Black}">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                <!-- Header -->
                <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Spacing="8">
                    <Label Text="{Binding Entity.Icon, Source={x:Reference ClimateControl}}" 
                           FontSize="20" 
                           VerticalOptions="Center"/>
                    <Label Text="{Binding Entity.Name, Source={x:Reference ClimateControl}}" 
                           FontSize="16" 
                           FontAttributes="Bold" 
                           VerticalOptions="Center"/>
                    <Label Text="{Binding Entity.GetDisplayState, Source={x:Reference ClimateControl}}" 
                           FontSize="14" 
                           TextColor="Gray" 
                           VerticalOptions="Center" 
                           HorizontalOptions="EndAndExpand"/>
                </HorizontalStackLayout>

                <!-- Current Temperature -->
                <Label Grid.Row="1" 
                       Grid.Column="0" 
                       Text="{Binding Entity.CurrentTemperature, Source={x:Reference ClimateControl}, StringFormat='Current: {0:F1}°C'}" 
                       FontSize="14" 
                       VerticalOptions="Center" 
                       Margin="0,8,0,0"/>

                <!-- Target Temperature Slider -->
                <Slider Grid.Row="2" 
                        Grid.Column="0" 
                        Minimum="{Binding Entity.MinTemp, Source={x:Reference ClimateControl}}" 
                        Maximum="{Binding Entity.MaxTemp, Source={x:Reference ClimateControl}}" 
                        Value="{Binding Entity.TargetTemperature, Source={x:Reference ClimateControl}}" 
                        ValueChanged="OnTargetTemperatureChanged"
                        Margin="0,8,0,0"/>

                <!-- Target Temperature Label -->
                <Label Grid.Row="1" 
                       Grid.Column="1" 
                       Text="{Binding Entity.TargetTemperature, Source={x:Reference ClimateControl}, StringFormat='{0:F1}°C'}" 
                       FontSize="16" 
                       FontAttributes="Bold" 
                       VerticalOptions="Center" 
                       HorizontalOptions="End" 
                       Margin="8,8,0,0"/>
            </Grid>
        </Border>
    </ContentView.Content>
</ContentView>