<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IxiHome.Pages.SettingsPage"
             Title="Settings">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- QuIXI Connection Settings -->
            <Frame Padding="15" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="QuIXI Connection" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="QuixiAddressEntry" Placeholder="QuIXI Address" Text="{Binding QuixiAddress}"/>
                    <Entry x:Name="QuixiPortEntry" Placeholder="Port" Keyboard="Numeric" Text="{Binding QuixiPort}"/>
                    <Entry x:Name="QuixiUsernameEntry" Placeholder="Username (optional)" Text="{Binding QuixiUsername}"/>
                    <Entry x:Name="QuixiPasswordEntry" Placeholder="Password (optional)" IsPassword="True"/>
                    <Button Text="Test Connection" Clicked="OnTestConnectionClicked"/>
                    <Label x:Name="ConnectionStatusLabel" TextColor="Gray" FontSize="12"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Home Assistant Settings -->
            <Frame Padding="15" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Home Assistant" FontSize="18" FontAttributes="Bold"/>
                    <Entry x:Name="HomeAssistantUrlEntry" Placeholder="Home Assistant URL" Text="{Binding HomeAssistantUrl}"/>
                    <Entry x:Name="HomeAssistantTokenEntry" Placeholder="Long-Lived Access Token" IsPassword="True"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Sensor Settings -->
            <Frame Padding="15" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Sensors" FontSize="18" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Location Sensor" VerticalOptions="Center"/>
                        <Switch x:Name="LocationSensorSwitch" Grid.Column="1" Toggled="OnLocationSensorToggled"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Battery Sensor" VerticalOptions="Center"/>
                        <Switch x:Name="BatterySensorSwitch" Grid.Column="1" Toggled="OnBatterySensorToggled"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Network Sensor" VerticalOptions="Center"/>
                        <Switch x:Name="NetworkSensorSwitch" Grid.Column="1" Toggled="OnNetworkSensorToggled"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- App Settings -->
            <Frame Padding="15" HasShadow="True" CornerRadius="10">
                <VerticalStackLayout Spacing="10">
                    <Label Text="App Settings" FontSize="18" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Dark Theme" VerticalOptions="Center"/>
                        <Switch x:Name="DarkThemeSwitch" Grid.Column="1" Toggled="OnDarkThemeToggled"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Enable Notifications" VerticalOptions="Center"/>
                        <Switch x:Name="NotificationsSwitch" Grid.Column="1" Toggled="OnNotificationsToggled"/>
                    </Grid>
                    <Grid ColumnDefinitions="*,Auto">
                        <Label Text="Require Authentication" VerticalOptions="Center"/>
                        <Switch x:Name="AuthSwitch" Grid.Column="1"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Save Button -->
            <Button Text="Save Settings" Clicked="OnSaveClicked" Margin="0,10,0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
