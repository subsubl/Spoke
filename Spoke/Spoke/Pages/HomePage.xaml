<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Spoke.Controls"
             xmlns:utils="clr-namespace:Spoke.Utils"
             xmlns:data="clr-namespace:Spoke.Data"
             x:Class="Spoke.Pages.HomePage"
             Title="Home">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Entity Templates -->
            <DataTemplate x:Key="ToggleTemplate">
                <controls:ToggleEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="SensorTemplate">
                <controls:SensorEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="GaugeTemplate">
                <controls:GaugeEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="GraphTemplate">
                <controls:GraphEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="LightTemplate">
                <controls:LightEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <DataTemplate x:Key="ClimateTemplate">
                <controls:ClimateEntityControl Entity="{Binding .}"/>
            </DataTemplate>
            
            <!-- Template Selector -->
            <utils:EntityTemplateSelector x:Key="EntitySelector"
                                          ToggleTemplate="{StaticResource ToggleTemplate}"
                                          SensorTemplate="{StaticResource SensorTemplate}"
                                          GaugeTemplate="{StaticResource GaugeTemplate}"
                                          GraphTemplate="{StaticResource GraphTemplate}"
                                          LightTemplate="{StaticResource LightTemplate}"
                                          ClimateTemplate="{StaticResource ClimateTemplate}"
                                          DefaultTemplate="{StaticResource SensorTemplate}"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <Grid RowDefinitions="Auto,*,Auto" Padding="10">
        <!-- Local Sensors Section -->
        <VerticalStackLayout Grid.Row="0" Margin="0,0,0,20">
            <Label Text="ðŸ“Š Local Sensors" FontSize="18" FontAttributes="Bold" Margin="0,0,0,10"/>
            <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto,Auto">
                <!-- Location Sensor -->
                <Label Text="ðŸ“ Location" Grid.Row="0" Grid.Column="0" FontSize="14"/>
                <Label x:Name="LocationSensorLabel" Text="Not available" Grid.Row="1" Grid.Column="0" FontSize="12" TextColor="Gray"/>
                
                <!-- Battery Sensor -->
                <Label Text="ðŸ”‹ Battery" Grid.Row="0" Grid.Column="1" FontSize="14"/>
                <Label x:Name="BatterySensorLabel" Text="Not available" Grid.Row="1" Grid.Column="1" FontSize="12" TextColor="Gray"/>
                
                <!-- Network Sensor -->
                <Label Text="ðŸ“¶ Network" Grid.Row="0" Grid.Column="2" FontSize="14"/>
                <Label x:Name="NetworkSensorLabel" Text="Not available" Grid.Row="1" Grid.Column="2" FontSize="12" TextColor="Gray"/>
            </Grid>
        </VerticalStackLayout>
        
        <!-- Entities List -->
        <CollectionView x:Name="EntitiesCollection"
                        Grid.Row="1"
                        SelectionMode="None"
                        ItemTemplate="{StaticResource EntitySelector}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="20">
                    <Label Text="ðŸ " FontSize="64" HorizontalTextAlignment="Center"/>
                    <Label Text="No Entities Yet" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,5"/>
                    <Label Text="Tap the + button below to add your first entity" 
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Add Entity Button -->
        <Button Text="+ Add Entity" 
                Grid.Row="2"
                Clicked="OnAddEntityClicked"
                HeightRequest="50"
                CornerRadius="25"
                Margin="20,10,20,10"
                BackgroundColor="{AppThemeBinding Light={StaticResource Primary}, Dark={StaticResource Primary}}"
                TextColor="White"/>
    </Grid>
</ContentPage>
